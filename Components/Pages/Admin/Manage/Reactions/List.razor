@page "/Admin/Manage/Reactions/List"
@attribute [Authorize(Roles = "Admin")]
@inject NavigationManager Navigation
@inject IReactionService ReactionService
@rendermode InteractiveServer

<PageTitle>@PageTitle</PageTitle>

<h3>@PageTitle</h3>

<div class="mb-3">
    <a class="btn btn-success" href="/Admin/Manage/Reactions/New">New Reaction</a>
</div>

<div class="card">
    <div class="card-body">
        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading Reactions...</p>
            </div>
        }
        else if (allReactions.Count == 0)
        {
            <div class="alert alert-light border text-center" role="alert">
                No Reactions found.
            </div>
        }
        else
        {
            <Grid TItem="Reaction" Class="table table-striped" Data="allReactions" AllowFiltering="@true" AllowPaging="@true" PageSize="@PageSize" PageSizeSelectorVisible="true" PageSizeSelectorItems="@AvailablePageSizes" Responsive="@true">
                <GridColumns>
                    <GridColumn TItem="Reaction" HeaderText="Id" PropertyName="Id">@context.Id</GridColumn>
                    <GridColumn TItem="Reaction" HeaderText="Reaction Type" PropertyName="ReactionType">@context.ReactionType</GridColumn>
                    <GridColumn TItem="Reaction" HeaderText="Actions" Filterable="@false">
                        <button class="btn btn-warning" @onclick="() => Edit(context.Id)">Edit</button>
                        <button class="btn btn-danger" @onclick="() => DeleteReactionAsync(context.Id)">Delete</button>
                    </GridColumn>
                </GridColumns>
            </Grid>
        }
    </div>
</div>

@code {
    string PageTitle = "Reactions";
    private List<Reaction> allReactions = new();
    private bool isLoading = true;

    private int PageSize = 10;
    int[] AvailablePageSizes = new int[] { 10, 20, 50, 100 };

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        allReactions = await ReactionService.GetAllAsync();
        isLoading = false;
    }

    private async Task DeleteReactionAsync(int ReactionId)
    {
        var confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this reaction?");
        if (confirmed)
        {
            await ReactionService.DeleteAsync(ReactionId);
            allReactions = await ReactionService.GetAllAsync();
        }
    }

    private void Edit(int id) => Navigation.NavigateTo($"/Admin/Manage/Reactions/Edit/{id}");

    [Inject] private IJSRuntime JS { get; set; } = default!;
}