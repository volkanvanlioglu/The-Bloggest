@* Components\Pages\Admin\Manage\Reactions\Edit.razor *@
@page "/Admin/Manage/Reactions/Edit/{Id:int}"
@attribute [Authorize(Roles = "Admin")]
@using TheBloggest.Data.Models
@using TheBloggest.Interfaces
@inject IReactionService ReactionService
@inject NavigationManager Navigation

<h3>Edit Reaction</h3>

<div class="card">
    <div class="card-body">
        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading reaction...</p>
            </div>
        }
        else if (reaction == null)
        {
            <div class="alert alert-danger">Reaction not found.</div>
        }
        else
        {
            <EditForm Model="reaction" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-3">
                    <label class="form-label">Type</label>
                    <InputText class="form-control" @bind-Value="reaction.ReactionType" />
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-primary" type="submit" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Save
                    </button>
                    <a class="btn btn-secondary" href="/Admin/Manage/Reactions/List">Cancel</a>
                </div>
            </EditForm>
        }
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private Reaction? reaction;
    private bool isLoading = true;
    private bool isSaving = false;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        reaction = await ReactionService.GetByIdAsync(Id);
        isLoading = false;
    }

    private async Task HandleValidSubmit()
    {
        isSaving = true;
        var result = await ReactionService.UpdateAsync(Id, reaction!);
        isSaving = false;

        if (result)
        {
            Navigation.NavigateTo("/Admin/Manage/Reactions/List");
        }
        else
        {
            // Optionally show an error message
        }
    }
}